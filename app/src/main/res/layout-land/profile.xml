<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <TextView
            android:id="@+id/hostel_display"
            android:layout_width="139dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/climate_crisis"
            android:padding="6sp"
            android:text="HOSTEL"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/cceid_display"
            app:layout_constraintStart_toStartOf="@+id/cceid_display"
            app:layout_constraintTop_toBottomOf="@+id/cceid_display" />

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="167dp"
            android:layout_height="172dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hostel_display" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="223dp"
            android:layout_height="202dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_display"
            android:layout_width="280dp"
            android:layout_height="37dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/border"
            android:fontFamily="@font/climate_crisis"
            android:padding="6sp"
            android:text="NAME"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/age_display"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/climate_crisis"
            android:padding="6sp"
            android:text="AGE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/name_display"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/name_display"
            app:layout_constraintTop_toBottomOf="@+id/name_display" />

        <TextView
            android:id="@+id/branch_display"
            android:layout_width="139dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/climate_crisis"
            android:padding="6sp"
            android:text="BRANCH"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/age_display"
            app:layout_constraintTop_toBottomOf="@+id/age_display" />

        <TextView
            android:id="@+id/sem_display"
            android:layout_width="139dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/climate_crisis"
            android:padding="6sp"
            android:text="SEM"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/age_display"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/branch_display"
            app:layout_constraintTop_toBottomOf="@+id/age_display" />

        <TextView
            android:id="@+id/phone_display"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/climate_crisis"
            android:padding="6sp"
            android:text="PHONE NUMBER"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/age_display"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="@+id/age_display"
            app:layout_constraintTop_toBottomOf="@+id/sem_display" />

        <TextView
            android:id="@+id/cceid_display"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/climate_crisis"
            android:padding="6sp"
            android:text="CCE ID"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/phone_display"
            app:layout_constraintStart_toStartOf="@+id/phone_display"
            app:layout_constraintTop_toBottomOf="@+id/phone_display" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>